/* The WHERE Clause (optional), always comes after 
the FROM clause. 
It specifies criteria for filtering records. 
WHERE logicalCondition

Use logical conditions: 
	'TEXT', AND, =, <> (not equal), <, >, >=, <=,  
    OR, BETWEEN, LIKE, IN()[equals one of these values] 
 */

SELECT 
	customer_id, 
  rental_id, 
  amount, 
  payment_date
FROM PAYMENT
WHERE amount = 0.99


SELECT 
	customer_id, 
  rental_id, 
  amount, 
  payment_date
FROM payment
-- WHERE payment_date > '2006-01-01' or
WHERE amount = 0.99
